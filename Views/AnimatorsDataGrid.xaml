<UserControl x:Class="TP2_AnimateursWPF_AP.Views.AnimatorsDataGrid"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ViewModels="clr-namespace:TP2_AnimateursWPF_AP.ViewModels" mc:Ignorable="d">
  <UserControl.DataContext>
    <ViewModels:AnimatorsViewModel />
  </UserControl.DataContext>
  <DataGrid ItemsSource="{Binding Animators}" SelectionMode="Single"
      SelectionUnit="FullRow" AutoGenerateColumns="False" ColumnWidth="*" Margin="5 0">
    <DataGrid.Columns>
      <DataGridTextColumn Header="Prénom" Binding="{Binding Prenom}" IsReadOnly="True" />
      <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" IsReadOnly="True" />
      <DataGridTextColumn Header="Téléphone" Binding="{Binding Telephone}"
          IsReadOnly="True" CanUserSort="False" />
    </DataGrid.Columns>
  </DataGrid>
</UserControl>
