    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="3*" />
      <ColumnDefinition Width="2*" />
    </Grid.ColumnDefinitions>
    <views:AnimatorsDataGrid Grid.Column="0" DataGrid.SelectionChanged="AnimatorsDataGrid_SelectionChanged" />
